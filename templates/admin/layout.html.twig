{% extends 'base.html.twig' %}

{% block title %}Administration - CityFlow{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administration</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Utilisateurs</h3>
                    <p class="card-text">Gérez les utilisateurs et leurs droits d'accès</p>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-primary">
                        <i class="fas fa-cog me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-map-marker-alt fa-3x mb-3 text-success"></i>
                    <h3 class="card-title">Signalements</h3>
                    <p class="card-text">Gérez et modérez les signalements</p>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-cog me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-list-alt fa-3x mb-3 text-warning"></i>
                    <h3 class="card-title">Catégories</h3>
                    <p class="card-text">Gérez les catégories de signalements</p>
                    <a href="#" class="btn btn-warning">
                        <i class="fas fa-cog me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-city fa-3x mb-3 text-info"></i>
                    <h3 class="card-title">Villes</h3>
                    <p class="card-text">Gérez les villes couvertes par l'application</p>
                    <a href="#" class="btn btn-info">
                        <i class="fas fa-cog me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}