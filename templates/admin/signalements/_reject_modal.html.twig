{# templates/admin/signalements/_reject_modal.html.twig #}
<div class="modal fade" id="rejectModal{{ signalement.id }}" tabindex="-1" aria-labelledby="rejectModalLabel{{ signalement.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel{{ signalement.id }}">Rejeter le signalement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <form action="{{ path('app_admin_signalements_rejeter', {'id': signalement.id}) }}" method="post">
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir rejeter ce signalement ?</p>
                    <p><strong>Titre :</strong> {{ signalement.titre }}</p>
                    
                    <div class="mb-3">
                        <label for="commentaire{{ signalement.id }}" class="form-label">Motif du rejet</label>
                        <textarea class="form-control" id="commentaire{{ signalement.id }}" name="commentaire" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Rejeter</button>
                </div>
            </form>
        </div>
    </div>
</div>