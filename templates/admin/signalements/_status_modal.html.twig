{# templates/admin/signalements/_status_modal.html.twig #}
<div class="modal fade" id="statusModal{{ signalement.id }}" tabindex="-1" aria-labelledby="statusModalLabel{{ signalement.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel{{ signalement.id }}">Modifier le statut du signalement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <form action="{{ path('app_admin_signalements_modifier_statut', {'id': signalement.id}) }}" method="post">
                <div class="modal-body">
                    <p><strong>Titre :</strong> {{ signalement.titre }}</p>
                    <p><strong>Statut actuel :</strong> 
                        {% if signalement.statut.value == 'NOUVEAU' %}
                            <span class="badge bg-info">Nouveau</span>
                        {% elseif signalement.statut.value == 'EN_COURS' %}
                            <span class="badge bg-warning text-dark">En cours</span>
                        {% elseif signalement.statut.value == 'RESOLU' %}
                            <span class="badge bg-success">Résolu</span>
                        {% elseif signalement.statut.value == 'FERME' %}
                            <span class="badge bg-secondary">Fermé</span>
                        {% endif %}
                    </p>
                    
                    <div class="mb-3">
                        <label for="statut{{ signalement.id }}" class="form-label">Nouveau statut</label>
                        <select class="form-select" id="statut{{ signalement.id }}" name="statut" required>
                            <option value="NOUVEAU" {% if signalement.statut.value == 'NOUVEAU' %}selected{% endif %}>Nouveau</option>
                            <option value="EN_COURS" {% if signalement.statut.value == 'EN_COURS' %}selected{% endif %}>En cours</option>
                            <option value="RESOLU" {% if signalement.statut.value == 'RESOLU' %}selected{% endif %}>Résolu</option>
                            <option value="FERME" {% if signalement.statut.value == 'FERME' %}selected{% endif %}>Fermé</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="commentaire{{ signalement.id }}" class="form-label">Commentaire (optionnel)</label>
                        <textarea class="form-control" id="commentaire{{ signalement.id }}" name="commentaire" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-warning">Modifier le statut</button>
                </div>
            </form>
        </div>
    </div>
</div>