{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur - CityFlow{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title h4 mb-0">Modifier l'utilisateur: {{ user.prenom }} {{ user.nom }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_label(form.prenom) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.villeResidence) }}
                            {{ form_widget(form.villeResidence, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.villeResidence) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.plainPassword) }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword) }}
                            <div class="form-text">{{ form_help(form.plainPassword) }}</div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.estValide) }}
                                {{ form_label(form.estValide) }}
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">{{ form_label(form.roles) }}</label>
                            <div class="row">
                                {% for role in form.roles %}
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            {{ form_widget(role) }}
                                            {{ form_label(role) }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.roles) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_users') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}