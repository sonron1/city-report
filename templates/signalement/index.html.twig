{% extends 'base.html.twig' %}

{% block title %}Tous les signalements - CityFlow{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Tous les signalements</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="mb-4">
        <a href="{{ path('app_signalement_nouveau') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nouveau signalement
        </a>
    </div>

    <div class="row">
        {% for signalement in signalements %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if signalement.photoUrl %}
                        <img src="{{ asset('uploads/' ~ signalement.photoUrl) }}" class="card-img-top" alt="{{ signalement.titre }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ signalement.titre }}</h5>
                        <p class="card-text">{{ signalement.description|u.truncate(100, '...') }}</p>
                        <div class="d-flex justify-content-between">
                            <span class="badge bg-secondary">{{ signalement.categorie.nom }}</span>
                            <span class="badge status-{{ signalement.statut.value }}">{{ signalement.statut.value|replace({'_': ' '})|capitalize }}</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">{{ signalement.dateSignalement|date('d/m/Y') }}</small>
                            <a href="{{ path('app_signalement_show', {'id': signalement.id}) }}" class="btn btn-sm btn-outline-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Aucun signalement n'a été trouvé.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}