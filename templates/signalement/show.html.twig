{% extends 'base.html.twig' %}

{% block title %}{{ signalement.titre }} - CityFlow{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="anonymous" />
    <style>
        #map-detail {
            height: 200px;
            width: 100%;
            border-radius: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="mb-4">
        <a href="{{ path('app_signalements') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour aux signalements
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">{{ signalement.titre }}</h1>
            <span class="badge status-{{ signalement.statut.value }} fs-6">{{ signalement.statut.value|replace({'_': ' '})|capitalize }}</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-4">
                    {% if signalement.photoUrl %}
                        <img src="{{ asset('uploads/' ~ signalement.photoUrl) }}" class="img-fluid rounded" alt="{{ signalement.titre }}">
                    {% else %}
                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                            <i class="fas fa-image fa-5x text-muted"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Informations</h2>
                        <p class="mb-2"><strong>Catégorie :</strong> <span class="badge bg-secondary">{{ signalement.categorie.nom }}</span></p>
                        <p class="mb-2"><strong>Ville :</strong> {{ signalement.ville.nom }}</p>
                        <p class="mb-2"><strong>Date :</strong> {{ signalement.dateSignalement|date('d/m/Y H:i') }}</p>
                        <p class="mb-2"><strong>Signalé par :</strong> {{ signalement.utilisateur.prenom }} {{ signalement.utilisateur.nom }}</p>
                        <p class="mb-2"><strong>Département :</strong> {{ signalement.ville.departement.nom }}</p>
                        <p class="mb-2"><strong>Ville :</strong> {{ signalement.ville.nom }}</p>
                        {% if signalement.arrondissement %}
                            <p class="mb-2"><strong>Arrondissement :</strong> {{ signalement.arrondissement.nom }}</p>
                        {% endif %}

                    </div>
                    
                    <div id="map-detail" class="map-container mb-3"></div>
                </div>
            </div>
            
            <div class="mt-4">
                <h2 class="h4 mb-3">Description</h2>
                <p>{{ signalement.description|nl2br }}</p>
            </div>
            
            {% if is_granted('ROLE_MODERATOR') or signalement.utilisateur == app.user %}
                <div class="mt-4 d-flex gap-2">
                    {% if is_granted('ROLE_MODERATOR') %}
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Changer le statut
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="#">Nouveau</a></li>
                                <li><a class="dropdown-item" href="#">En cours</a></li>
                                <li><a class="dropdown-item" href="#">Résolu</a></li>
                                <li><a class="dropdown-item" href="#">Annulé</a></li>
                            </ul>
                        </div>
                    {% endif %}
                    
                    {% if signalement.utilisateur == app.user and signalement.statut.value == 'nouveau' %}
                        <button class="btn btn-outline-danger">Supprimer</button>
                    {% endif %}
                </div>
            {% endif %}
            
            {% if is_granted('request_delete', signalement) and not signalement.demandeSuppressionStatut %}
                <a href="{{ path('app_signalement_demande_suppression', {'id': signalement.id}) }}" 
                   class="btn btn-danger btn-sm" 
                   onclick="return confirm('Êtes-vous sûr de vouloir demander la suppression de ce signalement?')">
                    <i class="fas fa-trash-alt"></i> Demander la suppression
                </a>
            {% elseif signalement.demandeSuppressionStatut == 'demandee' %}
                <span class="badge bg-warning">Suppression en attente d'approbation</span>
            {% elseif signalement.demandeSuppressionStatut == 'rejetee' %}
                <span class="badge bg-danger">Demande de suppression rejetée</span>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mapElement = document.getElementById('map-detail');
            
            if (mapElement) {
                // Vérifier que les coordonnées existent et sont valides
                {% if signalement.latitude is defined and signalement.longitude is defined and 
                      signalement.latitude is not null and signalement.longitude is not null %}
                const map = L.map('map-detail').setView([{{ signalement.latitude }}, {{ signalement.longitude }}], 15);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '© OpenStreetMap contributors'
                }).addTo(map);
                
                // Créer une icône pour le marqueur - utiliser une couleur fixe pour éviter les erreurs
                var icon = L.icon({
                    {% if signalement.categorie is defined and signalement.categorie is not null and signalement.categorie.id is defined %}
                        // Utiliser directement une couleur basée sur l'ID de la catégorie, sans variable intermédiaire
                        {% set colors = ['red', 'green', 'orange', 'yellow', 'blue', 'purple', 'grey', 'black'] %}
                        {% set colorIndex = (signalement.categorie.id - 1) % 8 %}
                        iconUrl: '{{ asset('images/markers/marker-icon-2x-' ~ colors[colorIndex] ~ '.png') }}',
                    {% else %}
                        iconUrl: '{{ asset('images/markers/marker-icon-2x-blue.png') }}',
                    {% endif %}
                    shadowUrl: '{{ asset('images/markers/marker-shadow.png') }}',
                    iconSize: [25, 41],
                    iconAnchor: [12, 41],
                    popupAnchor: [1, -34],
                    shadowSize: [41, 41]
                });
                
                L.marker([{{ signalement.latitude }}, {{ signalement.longitude }}], {icon: icon})
                    .addTo(map)
                    .bindPopup("{{ signalement.titre|e('js') }}");
                {% else %}
                // Afficher un message si les coordonnées ne sont pas disponibles
                mapElement.innerHTML = '<div class="alert alert-warning m-0 d-flex align-items-center justify-content-center" style="height: 100%;">Coordonnées non disponibles</div>';
                {% endif %}
            }
        });
    </script>
{% endblock %}