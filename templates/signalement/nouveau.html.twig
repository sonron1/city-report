{% extends 'base.html.twig' %}

{% block title %}Nouveau signalement - CityFlow{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">Nouveau signalement</h1>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.titre) }}
                                {{ form_widget(form.titre) }}
                                {{ form_errors(form.titre) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    {{ form_label(form.categorie) }}
                                    {{ form_widget(form.categorie) }}
                                    {{ form_errors(form.categorie) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.ville) }}
                                    {{ form_widget(form.ville) }}
                                    {{ form_errors(form.ville) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.photo) }}
                                {{ form_widget(form.photo) }}
                                {{ form_errors(form.photo) }}
                                <small class="form-text text-muted">Formats acceptés: JPG, PNG. Taille maximale: 5Mo</small>
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold">Localisation du problème</label>
                                <div class="d-grid gap-2 mb-2">
                                    <button type="button" class="btn btn-outline-primary" id="geolocate-btn">
                                        <i class="fas fa-map-marker-alt"></i> Utiliser ma position actuelle
                                    </button>
                                </div>
                                <div id="map" style="height: 400px; width: 100%;" class="mb-3 border rounded"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">Latitude</span>
                                            <input type="text" id="manual-latitude" class="form-control" placeholder="Ex: 6.3676953">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">Longitude</span>
                                            <input type="text" id="manual-longitude" class="form-control" placeholder="Ex: 2.3912362">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button type="button" class="btn btn-outline-secondary" id="apply-coords-btn">
                                            Appliquer ces coordonnées
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            {# Champs cachés pour les coordonnées #}
                            {{ form_widget(form.latitude) }}
                            {{ form_widget(form.longitude) }}
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i> Envoyer le signalement
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    {{ encore_entry_script_tags('signalement-map') }}
{% endblock %}