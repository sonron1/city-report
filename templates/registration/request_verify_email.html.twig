{% extends 'base.html.twig' %}

{% block title %}Demande d'email de vérification{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Demande d'email de vérification</h2>
                </div>
                <div class="card-body">
                    <p>Veuillez entrer votre adresse email pour recevoir un nouvel email de vérification :</p>
                    
                    <form action="{{ path('app_resend_verify_email') }}" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Adresse email :</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}